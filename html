    <!-- Feedback Component: Modal -->
    <div class="modal-overlay" id="myModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 style="margin: 0;">Fale Conosco</h3>
                <button class="btn" style="background: none; padding: 0; color: var(--color-neutral-600);" onclick="closeModal()">&times;</button>
            </div>
            <p>Se você tem um projeto em mente, utilize o formulário abaixo ou envie um e-mail diretamente. Retorno em até 24 horas.</p>
            <button class="btn btn-primary" onclick="closeModal()">Entendido</button>
        </div>
    </div>

    <!-- Feedback Component: Toast Container -->
    <div id="toast-container">
        <!-- Toasts serão injetados aqui via JavaScript -->
    </div>

    <!-- JAVASCRIPT para Interatividade -->
    <script>
        // Função para alternar o menu mobile (Hamburger)
        function toggleMobileMenu() {
            const navList = document.getElementById('navList');
            const hamburger = document.getElementById('hamburgerMenu');
            navList.classList.toggle('active');
            hamburger.classList.toggle('open');
            // Opcional: Adicionar classe para animação do hambúrguer, se necessário
        }

        // Função para Dropdown (para telas não-touch)
        function toggleDropdown(element, show) {
            const dropdownContent = element.querySelector('.dropdown-content');
            if (dropdownContent) {
                dropdownContent.style.display = show ? 'block' : 'none';
            }
        }

        // Função para Abrir o Modal
        function openModal() {
            const modal = document.getElementById('myModal');
            modal.classList.add('open');
        }

        // Função para Fechar o Modal
        function closeModal() {
            const modal = document.getElementById('myModal');
            modal.classList.remove('open');
        }

        // Função para Mostrar o Toast
        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.textContent = message;

            // Define cor do toast baseado no tipo de feedback
            if (type === 'error') {
                toast.style.backgroundColor = 'var(--color-error)';
            } else {
                toast.style.backgroundColor = 'var(--color-success)';
            }

            container.appendChild(toast);
            toast.style.display = 'block';

            // Remove o toast após a animação (5 segundos)
            setTimeout(() => {
                toast.style.display = 'none';
                container.removeChild(toast);
            }, 5000);
        }

        // Simulação de Validação Visual do Formulário
        function handleFormSubmit(event) {
            event.preventDefault();

            const form = event.target;
            const emailInput = document.getElementById('email');
            const msgInput = document.getElementById('mensagem');
            const emailFeedback = document.getElementById('emailFeedback');
            let isValid = true;

            // 1. Resetar estados
            emailInput.classList.remove('is-invalid', 'is-valid');
            msgInput.classList.remove('is-invalid', 'is-valid');
            emailFeedback.style.display = 'none';

            // 2. Validação de Email (Regex Simples)
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(emailInput.value)) {
                emailInput.classList.add('is-invalid');
                emailFeedback.style.display = 'block';
                isValid = false;
            } else {
                emailInput.classList.add('is-valid');
            }

            // 3. Validação de Mensagem (Mínimo 10 caracteres)
            if (msgInput.value.length < 10) {
                msgInput.classList.add('is-invalid');
                isValid = false;
            } else {
                msgInput.classList.add('is-valid');
            }


            // 4. Feedback final
            if (isValid) {
                showToast('Solicitação de orçamento enviada com sucesso! ');
                // Limpar formulário após 1 segundo (simulação)
                setTimeout(() => form.reset(), 1000);
            } else {
                showToast('Falha na validação do formulário. Corrija os erros.', 'error');
            }
        }
    </script>

</body>
</html>
